{
  "name": "labgen-tiktok",
  "version": "0.13.18",
  "description": "LABGEN TIKTOK - StreamLabs TikTok Stream Key Generator",
  "main": "dist/main/index.js",
  "author": "Nhat Linh Nguyen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antiantidev/labs-gen-tik.git"
  },
  "scripts": {
    "start": "electron-vite preview",
    "dev": "cross-env CHOKIDAR_USEPOLLING=true electron-vite dev",
    "build": "electron-vite build",
    "release": "npm run build && electron-builder --publish always",
    "preview": "electron-vite preview",
    "setup:chromedriver": "node ./scripts/download-chromedriver.js",
    "test": "node --test"
  },
  "build": {
    "appId": "com.labgen-tiktok.app",
    "productName": "LABGEN TIKTOK",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "package.json",
      "services/**/*",
      "drivers/**/*",
      "index.html"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "uninstallDisplayName": "LABGEN TIKTOK",
      "shortcutName": "LABGEN TIKTOK",
      "multiLanguageInstaller": true,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en_US",
        "vi_VN"
      ],
      "warningsAsErrors": false
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^12.6.2",
    "chromedriver": "140.0.4",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.33.0",
    "i18next": "^24.2.2",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^15.4.0",
    "selenium-webdriver": "^4.40.0",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.24",
    "cross-env": "^7.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1"
  }
}
