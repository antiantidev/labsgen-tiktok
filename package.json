{
  "name": "labs-gen-tik",
  "version": "0.2.0",
  "description": "StreamLabs TikTok Stream Key Generator (Electron rewrite)",
  "main": "dist/main/index.js",
  "author": "Nhat Linh Nguyen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antiantidev/labs-gen-tik.git"
  },
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "release": "npm run build && electron-builder --publish always",
    "preview": "electron-vite preview",
    "setup:chromedriver": "node ./scripts/download-chromedriver.js",
    "test": "node --test"
  },
  "build": {
    "appId": "com.labs-gen-tik.app",
    "productName": "labs-gen-tik",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "package.json",
      "services/**/*",
      "drivers/**/*",
      "index.html"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "antiantidev",
        "repo": "labs-gen-tik"
      }
    ]
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "adm-zip": "^0.5.10",
    "chromedriver": "^122.0.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "selenium-webdriver": "^4.18.1",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^2.2.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  }
}
